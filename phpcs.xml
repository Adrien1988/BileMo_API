<?xml version="1.0" encoding="UTF-8"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="vendor/squizlabs/php_codesniffer/phpcs.xsd">

    <description>
        PHP_CodeSniffer – PSR-12 + quelques ajustements pour BileMo
    </description>

    <!-- répertoires analysés -->
    <file>src/</file>
    <file>tests/</file>

    <!-- répertoires ignorés -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>var/*</exclude-pattern>
    <exclude-pattern>*/migrations/*</exclude-pattern>

    <!-- options d’exécution -->
    <arg name="basepath" value="." />
    <arg name="colors" />
    <arg name="parallel" value="75" />
    <arg value="p" />


    <rule ref="PSR12">
        <!-- …mais on ignore les sniffs que phpcbf 3.13 ne sait PAS corriger -->
        <exclude name="Squiz.WhiteSpace.FunctionClosingBraceSpace" />
        <exclude name="Squiz.Classes.ClassDeclaration.CloseBraceAfterBody" />
        <exclude name="Squiz.Classes.ClassDeclaration.EmptyLineBeforeClosingBrace" />
        <exclude name="Squiz.WhiteSpace.ScopeClosingBrace.ContentBefore" />
    </rule>


    <rule ref="PSR2.Classes.PropertyDeclaration" />
    <rule ref="PSR2.Methods.MethodDeclaration" />
    <rule ref="PSR2.Files.EndFileNewline" />
    <rule ref="PSR1">
        <exclude name="PSR1.Files.SideEffects" />
    </rule>


    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="4" />
            <property name="tabIndent" value="false" />
        </properties>
    </rule>

    <rule ref="PSR2.ControlStructures.SwitchDeclaration">
        <properties>
            <property name="indent" value="4" />
        </properties>
    </rule>


    <rule ref="Generic.Arrays.ArrayIndent" />
    <rule ref="Squiz.Arrays.ArrayDeclaration.CloseBraceNotAligned">
        <severity>0</severity>
    </rule>
    <rule ref="Squiz.Arrays.ArrayDeclaration.CloseBraceNewLine" />


    <rule ref="Squiz.Formatting.OperatorBracket">
        <exclude name="Squiz.Formatting.OperatorBracket" />
    </rule>

    <rule ref="Generic.PHP.ForbiddenFunctions">
        <properties>
            <property name="forbiddenFunctions" type="array">
                <element key="sizeof" value="count" />
                <element key="delete" value="unset" />
                <element key="print" value="echo" />
                <element key="is_null" value="null" />
                <element key="create_function" value="null" />
            </property>
        </properties>
    </rule>


    <rule ref="Generic.Formatting.MultipleStatementAlignment">
        <exclude name="Generic.Formatting.MultipleStatementAlignment" />
    </rule>
    <rule ref="Generic.ControlStructures.DisallowYodaConditions">
        <exclude name="Generic.ControlStructures.DisallowYodaConditions" />
    </rule>
    <rule ref="Squiz.Arrays.ArrayDeclaration.ValueNotAligned">
        <exclude name="Squiz.Arrays.ArrayDeclaration.ValueNotAligned" />
    </rule>
    <rule ref="Squiz.Arrays.ArrayDeclaration.KeyNotAligned">
        <exclude name="Squiz.Arrays.ArrayDeclaration.KeyNotAligned" />
    </rule>

    <rule ref="Generic.Files.LineLength">
        <severity>0</severity>
    </rule>

</ruleset>